<Window x:Class="ELM327_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ELM327_GUI"
        mc:Ignorable="d"
        Height="630" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Border Background="#272537"
            CornerRadius="20">
        <Grid x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="500"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition/>
                <RowDefinition Height="90"/>
            </Grid.RowDefinitions>

            <TextBlock  x:Name="dateTextBlock"
                        Grid.Row="0" Grid.Column="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontSize="13"
                        Foreground="LightBlue"
                        FontWeight="Bold"
                        TextAlignment="Center"/>

            <TextBlock  Text="ELM327 GUI&#x0a;AUTÓDIAGNOSZTIKAI INTERFÉSZ"
                        Grid.Row="0" Grid.Column="1"
                        FontSize="20"
                        Foreground="LightGoldenrodYellow"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        TextAlignment="Center"
                        FontFamily="/Fonts/#Gruppo"/>



            <TextBlock  Text="Verzió: 1.0.0&#x0a;Józsi Csaba"
                        Grid.Row="0" Grid.Column="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontSize="13"
                        Foreground="LightGreen"
                        FontWeight="Bold"
                        TextAlignment="Center"/>

            <StackPanel Grid.Row="1" Grid.Column="0"
                        Margin="10"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center">
				
                 <Button x:Name="autodataButton"
                        Content="Autó adatai"
                        Width="150"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding AutodataCommand}"/>

                 <Button x:Name="ATcommandButton"
                        Content="AT parancsok"
                        Width="150"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding ATcommandCommand}"/>
					 
                <Button x:Name="PIDcommandButton"
                        Content="PID parancsok"
                        Width="150"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding PIDcommandCommand}"/>
				
                <Button x:Name="parsingButton"
                        Content=".dbc adatfájl parsing"
                        Width="150"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding ParsingCommand}"/>
				
                <Button x:Name="udsButton"
                        Content="UDS kompatibilitás"
                        Width="150"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding UdsCommand}"/>
				
            </StackPanel>

           

            <StackPanel Grid.Row="1" Grid.Column="2"
                        Margin="10"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center">
				
                <Button x:Name="howtouseButton"
                        Content="Használati útmutató"
                        Width="150"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding HowtouseCommand}"/>
				
                <Button x:Name="OBDsettingButton"
                        Content="OBD eszköz beállítás"
                        Width="150"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding OBDsettingCommand}"/>
				
                <Button x:Name="PDFreportgenButton"
                        Content="PDF riport generálás"
                        Width="150"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding PDFreportgenCommand}"/>
				
                <Button x:Name="commandsfromfileButton"
                        Content="Parancsok fájlból"
                        Width="150"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding CommandsfromfileCommand}"/>
				
                <Button x:Name="exitButton"
                        Content="Kilépés"
                        Width="150"
                        Height="40"
                        Margin="0,10,0,10"
                        Command="{Binding ExitCommand}"/>

            </StackPanel>

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.Background>
                    <ImageBrush ImageSource="Images/ELM327_GUI.png" Stretch="UniformToFill"/>
                </Grid.Background>

            </Grid>

        </Grid>
            
        
    </Border>
</Window>
